<h1 align="center">All users</h1>
<div class="mx-auto" style="width: fit-content">
      <%= will_paginate @users, :renderer => WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
<% @users.each do |user| %>
  <div class ="row" style="margin:10px">
    <div class="col-sm-12">
      <div class="card">
        <div class ="card-header">
          <%= link_to user.username , user_path(user) %>
        </div>
        <div class="card-body">
          <p class="card-title center">
            <%=link_to gravatar_for(user, size: 100), user_path(user) %></br>
          </p>
          <div class="text-muted small">
              <%= pluralize(user.articles.count, "article") if user.articles%>
          </div>
          <% if logged_in? and current_user.admin? %>
            <p class="card-title">
              <%=link_to "Delete", user_path(user), method: :delete,
              data: {confirm: "Are you sure ?"}
              %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="mx-auto" style="width: fit-content">
      <%= will_paginate @users, :renderer => WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>